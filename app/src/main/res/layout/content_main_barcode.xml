<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/barcodeScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="13dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ============================== Barcode Scan 버튼 ============================== -->
            <Button
                android:id="@+id/barcodeButtonBarcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/barcode_scan"
                android:textSize="25sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/barcodeFixTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Model Information"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_green_light"
                        android:orientation="vertical">

                        <!-- ============================== SerialNo ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/barcodeFixTextView2"
                                android:text="Serial No"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <TextView
                                android:id="@+id/barcodeTextViewSerialNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:gravity="right"
                                android:text=""
                                android:textSize="18sp"
                                android:textColor="@android:color/holo_blue_dark"
                                />

                        </LinearLayout>

                        <!-- ============================== Model ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/barcodeFixTextView3"
                                android:text="Model"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <TextView
                                android:id="@+id/barcodeTextViewModel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:gravity="right"
                                android:text=""
                                android:textSize="18sp"
                                android:textColor="@android:color/holo_blue_dark"
                                />

                        </LinearLayout>

                        <!-- ============================== BuyerCode ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/barcodeFixTextView4"
                                android:text="Buyer Code"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <TextView
                                android:id="@+id/barcodeTextViewBuyerCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:gravity="right"
                                android:text=""
                                android:textSize="18sp"
                                android:textColor="@android:color/holo_blue_dark"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/barcodeFixTextView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Sales Information"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_green_light"
                        android:orientation="vertical">

                        <!-- ============================== 출고 일 ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/barcodeFixTextView6"
                                android:text="Going Out Date"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <TextView
                                android:id="@+id/barcodeTextViewGoingOutDate"
                                android:text="1901-01-01"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <Button
                                android:id="@+id/barcodeButtonGoingOutDate"
                                android:text="@string/date_change"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textSize="18sp"
                                android:gravity="center"
                                />

                        </LinearLayout>

                        <!-- ============================== Warranty Code ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/barcodeFixTextView7"
                                android:text="Warranty Code"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <Spinner
                                android:id="@+id/barcodeSpinnerWarrantyCode"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                app:layout_constraintTop_toBottomOf="@+id/barcodeButtonGoingOutDate"
                                tools:layout_constraintLeft_creator="1"
                                tools:layout_constraintTop_creator="1"
                                />

                        </LinearLayout>

                        <!-- ============================== 만료 일  ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/barcodeFixTextView8"
                                android:text="Expiry Date"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />


                            <TextView
                                android:id="@+id/barcodeTextViewExpiryDate"
                                android:text="1901-01-01"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <Button
                                android:id="@+id/barcodeButtonExpiryDate"
                                android:text="@string/date_fetch"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textSize="18sp"
                                android:gravity="center"
                                />

                        </LinearLayout>

                        <!-- ============================== Branch Office  ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/barcodeFixTextView9"
                                android:text="Branch Office"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <Spinner
                                android:id="@+id/barcodeSpinnerBranchOffice"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                />
                        </LinearLayout>

                        <!-- ============================== Service Center  ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/barcodeFixTextView10"
                                android:text="Service Center"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <Spinner
                                android:id="@+id/barcodeSpinnerServiceCenter"
                                android:layout_width="215dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                />
                        </LinearLayout>

                        <!-- ============================== Description  ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/barcodeFixTextView11"
                                android:text="Description"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />

                            <EditText
                                android:id="@+id/barcodeEditTextDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:hint="Input Description."
                                />

                        </LinearLayout>

                        <!-- ============================== Quantity  ============================== -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/barcodeFixTextView12"
                                android:text="Quantity"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textSize="18sp"
                                android:gravity="left"
                                />android:gravity="left"

                            <EditText
                                android:id="@+id/barcodeEditTextQuantity"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="175dp"
                                android:maxLines="1"
                                android:textSize="18sp"
                                android:text="1"
                                android:inputType="number"
                                android:gravity="left"
                                android:hint="Input Number."
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/barcodeButtonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/barcode_save"
                android:textSize="25sp"/>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>