<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/barcodeButtonBarcode"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/barcode_scan"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/barcodeTextViewBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barocde"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeButtonBarcode"
        />

    <TextView
        android:id="@+id/barcodeTextViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ProductName"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeTextViewBarcode"
        />

    <TextView
        android:id="@+id/barcodeTextViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeTextViewProductName"
        />

    <TextView
        android:id="@+id/barcodeTextViewSpinnerPix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WarrantyType : "
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeTextViewEmail"
        />

    <Spinner
        android:id="@+id/bSpinnerWarrantyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:entries="@array/WarrantyType"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/barcodeTextViewSpinnerPix"
        app:layout_constraintTop_toBottomOf="@+id/barcodeTextViewEmail"
        />

    <Button
        android:id="@+id/barcodeButtonDatePicker"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/date_setting"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSpinnerWarrantyType"
        />

    <TextView
        android:id="@+id/barcodeTextViewDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1999-01-01"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeButtonDatePicker"
        />


    <Button
        android:id="@+id/barcodeButtonSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/barcode_save"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeTextViewDatePicker"
        />

</android.support.constraint.ConstraintLayout>